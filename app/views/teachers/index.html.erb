<h1>Teaching Artist</h1>



<form action="/teachers" method=POST>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <p>First Name</p>    
        <input name="name">
        <p>Last Name</p>   
        <input name="last_name">
        <p>Age</p>   
        <input name="age">
        <p>Salary</p>   
        <input name="salary">
        <p>Subject</p>   
        <input name="subject">
        <button>Submit</button>
</form>


<br>

 <table class="table">
 <thead>
    <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Age</th>
        <th>Salary</th>
        <th>Subject</th>
    </tr>
    </thead>

    <tbody>
        <% @teachers.each do |teacher| %>
            <tr>
                <td><%= teacher.name %></td>
                <td><%= teacher.last_name %></td>
                <td><%= teacher.age %></td>
                <td><%= teacher.salary %></td>
                <td><%= teacher.subject %></td>
                <td><a href="/teachers/<%= teacher.id %>"> DELETE</a></td>
                <td><a href="/teachers/<%= teacher.id %>/edit"> EDIT</a></td>
            </tr>
        <% end %>    
    </tbody>
     
</table>

<a class="show_form">ADD NEW TEACHER</a>