<h1>Cohorts</h1>

<form action="/cohorts" method=POST>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input name="name">
        <input name="start_date">
        <input name="end_date">
        <button>Submit</button>
</form>

 <div>
    <% @cohorts.each do |cohort| %>
        <h3> <%= cohort.name %> </h3>
        <p> <%= cohort.start_date %> </p>
        <p> <%= cohort.end_date %> </p>
        <a href="/cohorts/<%= cohort.id %>"> DELETE</a>
        <a href="/cohorts/<%= cohort.id %>/edit"> EDIT</a>
    <% end %>
 </div>